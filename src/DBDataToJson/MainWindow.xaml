<Window x:Class="DBDataToJson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBDataToJson"
        mc:Ignorable="d"
        Title="数据库数据转JSON" Height="450" Width="800">
    <Grid>
        <Label  Content="数据库：" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="70" Height="25"/>
        <TextBox Name="txtDbString" HorizontalAlignment="Left" Height="22" Margin="88,10,0,0" TextWrapping="Wrap" Text="配置数据库连接字符串" VerticalAlignment="Top" Width="694"/>
        <TextBox Name="txtSqlString" HorizontalAlignment="Left" Height="45" Margin="10,48,0,0" TextWrapping="Wrap" Text="需要执行的sql语句" VerticalAlignment="Top" Width="772"/>
        <TextBox Name="txtJsonString" HorizontalAlignment="Left" Height="263" Margin="10,147,0,0" TextWrapping="Wrap" Text="Json显示区域" VerticalAlignment="Top" Width="755"/>
        <Button Name="btnSearch" Content="确定" HorizontalAlignment="Left" Margin="23,106,0,0" VerticalAlignment="Top" Width="88" Height="22"/>
        <Button Name="btnCopy" Content="复制" HorizontalAlignment="Left" Margin="141,106,0,0" VerticalAlignment="Top" Width="88" RenderTransformOrigin="0.136,0.259" />
        
    </Grid>
</Window>
